<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.wireser.minecraft</groupId>
  <artifactId>TheMinecraftPlugin</artifactId>
  <name>TheMinecraftPlugin</name>
  <version>1.0.0</version>
  <description>The only plugin we will ever need.</description>
  <url>https://github.com/wireser/TheMinecraftPlugin</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/wireser/TheMinecraftPlugin/issues</url>
  </issueManagement>
  <inceptionYear>2025</inceptionYear>
  <developers>
    <developer>
      <id>wireser</id>
      <name>Dylan Holloway</name>
      <url>https://github.com/wireser</url>
      <roles>
        <role>developer</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://opensource.org/licenses/MIT</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/wireser/TheMinecraftPlugin.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/wireser/TheMinecraftPlugin.git</developerConnection>
    <url>https://github.com/wireser/TheMinecraftPlugin</url>
  </scm>
  <organization>
    <name>wireser</name>
    <url>https://github.com/wireser</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${maven-resources-plugin.version}</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <release>${maven.compiler.release}</release>
          <encoding>UTF-8</encoding>
          <compilerArgs>
            <arg>-Xlint:all</arg>
          </compilerArgs>
          <fork>true</fork>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <minimizeJar>true</minimizeJar>
              <transformers>
                <transformer>
                  <mainClass>com.wireser.minecraft.Main</mainClass>
                </transformer>
                <transformer>
                  <resource>plugin.yml</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>enforce-java</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireJavaVersion>
                  <version>[21,)</version>
                </requireJavaVersion>
              </rules>
              <failFast>true</failFast>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>papermc-repo</id>
      <url>https://repo.papermc.io/repository/maven-public/</url>
    </repository>
    <repository>
      <id>minecraft-repo</id>
      <url>https://libraries.minecraft.net/</url>
    </repository>
    <repository>
      <id>jitpack</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>io.papermc.paper</groupId>
      <artifactId>paper-api</artifactId>
      <version>1.21.10-R0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.mojang</groupId>
      <artifactId>authlib</artifactId>
      <version>6.0.58</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <authlib.version>6.0.58</authlib.version>
    <hikari.version>7.0.2</hikari.version>
    <gson.version>2.13.2</gson.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-shade-plugin.version>3.5.1</maven-shade-plugin.version>
    <json.version>20250517</json.version>
    <maven-compiler-plugin.version>3.13.0</maven-compiler-plugin.version>
    <paper.version>1.21.10-R0.1-SNAPSHOT</paper.version>
    <maven-resources-plugin.version>3.3.1</maven-resources-plugin.version>
    <mysql.version>9.5.0</mysql.version>
  </properties>
</project>
